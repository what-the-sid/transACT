{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "#apps/*": ["./src/apps/*"],
      "#apps/*/dao": ["./src/apps/*/dao"],
      "#apps/*/controllers": ["./src/apps/*/controllers"],
      "#apps/*/helpers": ["./src/apps/*/helpers"],
      "#middleware": ["./src/middleware"],
      "#store": ["src/store"],
      "#db": ["./src/db"],
      "#db/utils": ["./src/db/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
